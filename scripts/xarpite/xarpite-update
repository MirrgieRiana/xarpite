#!/usr/bin/env bash

set -euo pipefail

# Parse command-line options
force_major=false
if [ "${1:-}" = "-f" ]; then
  force_major=true
  shift
fi

if [ $# -gt 0 ]; then
  echo "Usage: xarpite-update [-f]" >&2
  echo "  -f  Allow major version updates" >&2
  exit 1
fi

error() {
  echo "$1" >&2
  exit 1
}

check() {
  command -v "$1" > /dev/null 2>&1 || error "Error: $1 is required but not installed."
}
check curl
check tar
check perl
check sort
check rsync
check readlink
check mktemp

cd -- "$(dirname -- "$(readlink -f -- "$0")")"

# Setup temporary directory with cleanup trap
tmpdir=""
cleanup() {
  if [ -n "$tmpdir" ] && [ -d "$tmpdir" ]; then
    echo "Cleaning up temporary files" >&2
    rm -rf "$tmpdir" || true
  fi
}

on_exit() {
  exit_code=$?
  cleanup
  exit "$exit_code"
}

on_int() {
  cleanup
  exit 130  # 128 + SIGINT
}

on_term() {
  cleanup
  exit 143  # 128 + SIGTERM
}

trap on_exit EXIT
trap on_int INT
trap on_term TERM


# Determine the downloading version

current_version="$(cat "$(pwd)/version")"
current_major="${current_version%%.*}"

echo "Current version: $current_version"
echo "Fetching metadata"

export metadata=$(curl -s 'https://repo1.maven.org/maven2/io/github/mirrgieriana/xarpite-bin/maven-metadata.xml')

# Parse versions from metadata
parse_versions() {
  perl -E '
    $ENV{metadata} =~ /<versions>(.*?)<\/versions>/s or die;
    my $versions = $1;
    while ($versions =~ /<version>(\d+\.\d+\.\d+(?:\+[^<]*)?)<\/version>/g) {
        say $1;
    }
  ' | sort -Vr
}

# Filter function: pass through all versions or only same major version
filter_versions() {
  if [ "$force_major" = true ]; then
    cat
  else
    grep "^$current_major\." || true
  fi
}

version=$(parse_versions | filter_versions | head -n 1)
[ -z "$version" ] && error "Error: Failed to determine latest version."

# Check if already up-to-date
if [ "$version" = "$current_version" ]; then
  echo "Already up-to-date: $version"
  exit 0
fi

# Notify about major version updates if -f not specified
if [ "$force_major" = false ]; then
  latest_version=$(parse_versions | head -n 1)
  if ! echo "$latest_version" | grep -q "^$current_major\."; then
    echo "Note: Major version update available: $latest_version" >&2
    echo "      Use -f flag to update to major versions" >&2
    echo >&2
  fi
fi

echo "Target version: $version"

echo


# Download and extract

CLASSIFIER_FILE="$(pwd)/classifier"
[ -f "$CLASSIFIER_FILE" ] || error "Error: classifier file not found: $CLASSIFIER_FILE"
CLASSIFIER="$(cat "$CLASSIFIER_FILE")"
[ -z "$CLASSIFIER" ] && error "Error: Failed to determine classifier."

file="xarpite-bin-$version-$CLASSIFIER.tar.gz"
tmpdir=$(mktemp -d "/tmp/xarpite-update.XXXXXX") || error "Error: Failed to create temporary directory."
# Create a subdirectory to avoid permission issues with the temporary directory itself
workdir="$tmpdir/work"
mkdir -p "$workdir"
url="https://repo1.maven.org/maven2/io/github/mirrgieriana/xarpite-bin/$version/$file"

echo "Downloading from: $url"

curl -L -o - "$url" | tar -xzf - -C "$workdir"
echo "Successfully downloaded and extracted to: $workdir"

echo


# Update

echo "Updating"

echo "--- Dry run (no changes) ---"
rsync -n --itemize-changes -ac --delete "$workdir"/ ./
echo
printf "Type Y to apply (otherwise cancel): " >&2
read -r answer
echo
case "$answer" in
  [Yy]*)
    ;;
  *)
    error "Cancelled."
    ;;
esac
echo "Syncing"
rsync -ac --delete "$workdir"/ ./

echo


echo "Successfully Updated"
